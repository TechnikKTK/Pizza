<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pizza.LoginShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Pizza.Views"
    xmlns:local="clr-namespace:Pizza"
    Shell.FlyoutBehavior="Disabled">
    <TabBar FlyoutItemIsVisible="False">
        <ShellContent Title="Авторизация"
                     Icon="tab_login.png"
                     ContentTemplate="{DataTemplate views:Login}" />
        <ShellContent Title="Регистрация"
                     Icon="tab_register.png"
                     ContentTemplate="{DataTemplate views:RegisterPage}" />
    </TabBar>
</Shell>